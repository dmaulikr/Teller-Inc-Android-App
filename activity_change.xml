<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_change"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#03A9F4"
    android:padding="20dp"
    tools:context="com.teller.kwill.teller.ChangeActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:text="Change Password"
        android:textColor="#ffffff"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/newpass"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="#fbfefd"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter New Password Here"
        android:inputType="textPassword"

        android:textStyle="bold" />

    <EditText
        android:id="@+id/cpassword"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/newpass"
        android:layout_marginTop="30dp"
        android:background="#fbfefd"
        android:ems="10"
        android:gravity="center"
        android:hint="Confirm New Password Here"
        android:inputType="textPassword"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonpl"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/cpassword"
        android:layout_marginTop="21dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="Reset" />

</RelativeLayout>
