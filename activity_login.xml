<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#03A9F4"
    android:padding="20dp"
    tools:context="com.teller.kwill.teller.LoginActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:text="Log-In"
        android:textColor="#ffffff"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="#fbfefd"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter Email Here"
        android:inputType="textEmailAddress"

        android:textStyle="bold" />

    <EditText
        android:id="@+id/password"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/email"
        android:layout_marginTop="30dp"
        android:background="#fbfefd"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter Password Here"
        android:inputType="textPassword"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:layout_centerVertical="true"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/com_facebook_button_background_color_selected"
        android:text="LOGIN" />
    <Button
        android:id="@+id/passres"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/button"
        android:background="@color/colorPrimary"
        android:text="Forgot Password"
        android:textColor="#000000"
        android:textSize="13dp" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/passres"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:onClick="uii" />

    <ImageView
        android:id="@+id/imageViewy"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/login_button"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="12dp"
        android:adjustViewBounds="false"
        android:background="@android:color/holo_blue_dark"
        android:cropToPadding="false"
        android:src="@drawable/how" />


</RelativeLayout>
