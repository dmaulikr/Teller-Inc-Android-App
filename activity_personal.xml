<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_personal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/com_facebook_button_border_color_focused"
    tools:context="com.teller.kwill.teller.PersonalActivity">

    <ScrollView
        android:id="@+id/kjk"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollIndicators="right">

        <LinearLayout
            android:id="@+id/kko"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:scrollbars="vertical" />
    </ScrollView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="20dp"
        android:text="Answers"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView2"
        android:layout_marginStart="110dp"
        android:layout_toEndOf="@+id/textView2"
        android:text="Followers"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:textColorLink="@drawable/com_facebook_button_background"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignStart="@+id/textView3"
        android:clickable="true"
        android:textColorLink="@drawable/com_facebook_button_background"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/lop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView5" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignBottom="@+id/videoView"
        android:layout_alignEnd="@+id/imageView3"
        android:layout_alignTop="@+id/videoView"
        android:layout_toEndOf="@+id/textView5"
        app:srcCompat="@drawable/com_facebook_auth_dialog_header_background" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_above="@+id/lop"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp"
        app:srcCompat="@drawable/com_facebook_auth_dialog_header_background" />

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/videoView"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColorLink="@drawable/com_facebook_button_background"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView6"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColorLink="@drawable/com_facebook_button_background"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="300dp"
        android:layout_height="20dp"
        android:layout_above="@+id/textView3"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:background="?android:attr/alertDialogIcon"
        android:backgroundTint="@color/colorPrimaryDark" />

    <Button
        android:id="@+id/button4"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageView2"
        android:layout_below="@+id/textView8"
        android:background="?attr/actionModeShareDrawable"
        android:backgroundTint="@color/colorPrimaryDark" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_above="@+id/imageView2"
        android:layout_alignTop="@+id/button5"
        android:layout_toStartOf="@+id/button4"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColorLink="@drawable/com_facebook_button_background"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button5"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/imageView2"
        android:layout_alignEnd="@+id/imageView3"
        android:layout_toEndOf="@+id/editText3"
        android:background="@drawable/com_facebook_tooltip_blue_topnub" />

    <Button
        android:id="@+id/button6"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@android:drawable/ic_delete"
        android:layout_below="@+id/textView8"
        android:layout_alignStart="@+id/imageView2" />

    <Button
        android:id="@+id/button16"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@android:drawable/ic_delete"
        android:layout_alignBaseline="@+id/button17"
        android:layout_alignBottom="@+id/button17"
        android:layout_toStartOf="@+id/imageView2" />

    <Button
        android:id="@+id/button17"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/textView6"
        android:layout_below="@+id/editText3"
        android:layout_marginTop="22dp"
        android:background="@android:drawable/ic_delete" />

</RelativeLayout>
